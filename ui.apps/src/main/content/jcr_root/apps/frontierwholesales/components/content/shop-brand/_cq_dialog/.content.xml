<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Shop by Brand"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <listSettings jcr:primaryType="nt:unstructured" sling:hideResource="{Boolean}true"/>
                    <itemSettings jcr:primaryType="nt:unstructured" sling:hideResource="{Boolean}true"/>
                    <brandSettings 
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Shop by Brand Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                        <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            margin="{Boolean}true">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <heading
                                            jcr:primaryType="nt:unstructured"
                                            fieldDescription="The text to display to identify the title of the section."
                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                            fieldLabel="Section Heading"
                                            defaultValue="Shop by Brand"
                                            value="Shop by Brand"
                                            name="./heading"/>
                                        <brandpage1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="The path to a brand page to be featured"
                                            fieldLabel="Brand Page 1"
                                            name="./brandPage1"
                                            rootPath="/content/frontierwholesales"/>
                                        <brandpage2
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="The path to a brand page to be featured"
                                            fieldLabel="Brand Page 2"
                                            name="./brandPage2"
                                            rootPath="/content/frontierwholesales"/>
                                        <brandpage3
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="The path to a brand page to be featured"
                                            fieldLabel="Brand Page 3"
                                            name="./brandPage3"
                                            rootPath="/content/frontierwholesales"/>  
                                    </items>
                                </column>
                            </items>
                        </columns>
                        </items>
                    </brandSettings>
                </items>
            </tabs>                    
        </items>
    </content>
</jcr:root>
